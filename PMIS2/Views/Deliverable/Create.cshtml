@*@model PMISBussinessLayer.Entities.Deliverable*@
@using PMIS2.DTO;
@using PMISBussinessLayer.Entities;
@model InsertDeliverableDTO


@{
    ViewData["Title"] = "Create";
    var ph = (ProjectPhase)ViewBag.ProjectPhase;
}

<h1>Create</h1>

<h4>Deliverable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
