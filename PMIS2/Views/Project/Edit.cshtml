@using PMISBussinessLayer.Entities
@using PMIS2.DTO;
@model UpdateProjectDTO
@{
    ViewData["Title"] = "Edit";
    var proj = (Project)ViewBag.project;
}


<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@proj.Id" name="ProjectId" />
            @*<input type="hidden" value="@proj.ProjectMangerId" name="ProjectMangerId" />*@
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" value="@proj.ProjectName" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input name="StartDate" value="@proj.StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input name="EndDate" value="@proj.EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTypeId" class="control-label"></label>
                <select asp-for="ProjectTypeId" class="form-control" asp-items="ViewBag.ProjectTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectStatusId" class="control-label"></label>
                <select asp-for="ProjectStatusId" class="form-control" asp-items="ViewBag.ProjectStatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContractAmount" class="control-label"></label>
                <input asp-for="ContractAmount"  value="@proj.ContractAmount"class="form-control" />
                <span asp-validation-for="ContractAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContractFile" class="control-label"></label>
                <input asp-for="ContractFile" class="form-control" />
                <span asp-validation-for="ContractFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
