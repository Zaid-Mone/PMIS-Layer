



@model IEnumerable<PMISBussinessLayer.Entities.PaymentTerm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTermTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTermAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliverableId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliverable.ProjectPhase.Project.ProjectName)
            </th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTermTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTermAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliverableId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deliverable.ProjectPhase.Project.ProjectName)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


